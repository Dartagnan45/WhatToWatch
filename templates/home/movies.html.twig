{% extends 'base.html.twig' %}
{% block body %}

{% include "navbar.html.twig" %}

<body class="body-movies">

	{% for key,genre in genres %}
		{% if list == genre and key != 'series'  %}
			<h1 class="title-show">{{ title_films~key }}</h1>
		{% elseif list == genre and key == 'series'  %}
			<h1 class="title-show">{{ title_series~key }}</h1>
		{% endif %}
	{% endfor %}

<pre>
	{{ dump(movies) }}
</pre>

	<div class="container-fluid">
		<div class="row">

			{% for movie in movies.items|sort((a,b) => b.imDbRating <=> a.imDbRating)|slice(0, 50)%}
			<div class="col-sm-3">
				<div class="card">
					<a href="{{ path("content",{'title': movie.id}) }}"><img class="card-img-top poster"
							src="{{ movie.image }}" alt="Card image cap"></a>
					<div class="circle">
						<span class="rating">{{ movie.imDbRating }}</span>
					</div>
					<div class="card-body">
						<p class="card-text">{{ movie.title }}</p>
					</div>
				</div>
			</div>

			{% endfor %}

		</div>
	</div>
</body>
{% endblock %}