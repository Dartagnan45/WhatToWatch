{% extends 'base.html.twig' %}
{% block title %}Top 50
{% endblock %}
{% block body %}

	{% include "navbar.html.twig" %}

	<body class="body-movies">

		{% for key,genre in genres %}
			{% if list == genre and key != 'series'  %}
				<h1 class="title-show">{{ title_films~key }}</h1>
			{% elseif list == genre and key == 'series'  %}
				<h1 class="title-show">{{ title_series~key }}</h1>
			{% endif %}
		{% endfor %}

		<div class="container-fluid">
			<div
				class="row">
				{# example #}
				<div class="card sm-4 ml-4 mx-auto">
					<img class="card-img-top" src="https://picsum.photos/200/300" alt="Card image cap">
					<div class="card-body">
